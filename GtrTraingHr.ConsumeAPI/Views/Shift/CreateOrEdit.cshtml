@model Shift

@{
    ViewData["Title"] = "Create Or Edit";

}

<h1 class="text-center">Add Or Update</h1>

<hr />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="CreateOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ShiftName" class="control-label"></label>
                <input asp-for="ShiftName" class="form-control" />
                <span asp-validation-for="ShiftName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftIn"  class="control-label"></label>
                <input asp-for="ShiftIn" type="time" class="form-control" />
                <span asp-validation-for="ShiftIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftOut" class="control-label"></label>
                <input asp-for="ShiftOut" type="time" class="form-control" />
                <span asp-validation-for="ShiftOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftLate" class="control-label"></label>
                <input asp-for="ShiftLate" type="time" class="form-control" />
                <span asp-validation-for="ShiftLate" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
