@model Department

@{
    ViewData["Title"] = "Details";
}



<div>
    <h4 class="bg-info text-center">Department Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeptName)
        </dt>
        <dt class="col-sm-2">
             @Model.DeptName
        </dt>
      
    </dl>
</div>
<div>
    <a asp-action="CreateOrEdit" asp-route-id="@Model?.Id" class="btn btn-success">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
